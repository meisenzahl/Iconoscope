<component type="desktop">
  <id>com.github.santileortiz.iconoscope</id>
  <metadata_license>CC0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <name>Iconoscope</name>
  <summary>Simple icon visualizer</summary>
  <description>
    <p>View icons installed in your system and their properties.</p>
  </description>

  <releases>
      <release version="0.9.1" date="2018-10-10">
          <description>
              <p>Improved UI and make app ready for Juno</p>
              <ul>
                  <li>Update code for Juno.</li>
                  <li>Display information from the icon theme database (and make it selectable).</li>
                  <li>Support for icons available in multiple scales.</li>
                  <li>Show symbolic icons.</li>
              </ul>
          </description>
      </release>

      <release version="0.1.4" date="2018-3-15">
          <description>
              <p>Fix some requirements for AppCenter</p>
              <ul>
                  <li>Use RDNN naming for icons</li>
                  <li>Add changelog to appdata.xml</li>
              </ul>
          </description>
      </release>
  </releases>

  <provides>
      <binary>com.github.santileortiz.iconoscope</binary>
  </provides>

  <screenshots>
      <screenshot type="default">
          <image>https://raw.githubusercontent.com/santileortiz/Iconoscope/master/data/screenshot.png</image>
      </screenshot>
  </screenshots>

  <developer_name>Santiago León O.</developer_name>

  <url type="homepage">https://github.com/santileortiz/Iconoscope</url>
  <url type="bugtracker">https://github.com/santileortiz/Iconoscope/issues</url>

  <custom>
